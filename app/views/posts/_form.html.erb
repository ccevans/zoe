  <div class="panel-heading">
    <h1>Add Post</h1>
  </div>

<div class="panel-body">
  <div class="panel panel-default">
    <%= form_for @post, html: { multipart: true } do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :image2 %>
        <%= f.file_field :image2, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :image3 %>
        <%= f.file_field :image3, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :brand %>
        <%= f.text_field :brand, class: "form-control" %>
        <%= f.hidden_field :slug2 %>
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
        <%= f.hidden_field :slug %>
        <%= f.label :price %>
        <%= f.text_field :price, class: "form-control" %>
        <%= f.label :member_discount %>
        <%= f.text_field :member_discount, class: "form-control" %>
        <%= f.label :shipping_price %>
        <%= f.text_field :shipping_price, class: "form-control" %>
        <%= f.label :quantity %>
        <%= f.text_field :quantity, class: "form-control" %>
        <%= f.label :link %>
        <%= f.text_field :link, class: "form-control" %>

          <% if can? :manage, :all %>

              <%= f.select :category, [ 'Tee', 'Hat', 'Jacket', 'Accessory' ], :prompt => 'Select One' %>

              <%= f.collection_select :brand_id, Brand.all, :id, :title, {} %>

              <% if false %><%= f.collection_select :brand_ids, Brand.all, :id, :title, {}, { :multiple => true} %><% end %>
          <% end %>

      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>