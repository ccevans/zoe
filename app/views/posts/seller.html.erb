<table class="table table-striped table-bordered">
	<tr>
		<th class="center">Image</th>
		<th class="center">Brand</th>
		<th class="center">Title</th>
		<th class="center">Price</th>
		<th class="center">Link</th>
	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td><%= image_tag post.image.url(:thumb) %></td>
			<td><%= post.brand %></td>
			<td><%= post.title %></td>
			<td><% if post.price.present? %><%= number_to_currency(post.price) %><% end %></td>
			<td><% if post.link.present? %><%= post.link %><% end %></td>
			<td>
				<div class="btn-group">
					<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
						Action <span class="caret"></div>
					</button>
					<ul class="dropdown-menu">
						<li><%= link_to "View", post, class: "btn btn-link" %></li>
						<li><%= link_to "Edit", edit_post_path(post), class: "btn btn-link" %></li>
						<li><%= link_to "Destroy", post, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-link" %></li>
					</ul>
				</div>
			</td>
		</tr>
	<% end %>
</table>

<br>

<% if user_signed_in? %>
	<%= link_to 'New Post', new_post_path, class: "btn btn-link" %>
<% end %>

